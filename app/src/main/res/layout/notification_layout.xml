<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/purple_500"
    android:layout_height="80dp">


    <ImageView
        android:id="@+id/imageView_notify"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/purple_500"
        android:src="@drawable/mu" />

    <TextView
        android:id="@+id/title_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="45dp"
        android:layout_toStartOf="@+id/notification_play_pause"
        android:layout_toEndOf="@+id/imageView_notify"
        android:fontFamily="@font/nunito"
        android:gravity="top"
        android:singleLine="true"
        android:text="@string/notification_title"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/notification_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:layout_toStartOf="@+id/notification_close"
        android:src="@drawable/ic_pause_main"

        />


    <ImageButton
        android:id="@+id/notification_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:background="#00FFFFFF"
        android:backgroundTint="@color/primaryTextColor"
        android:src="@drawable/ic_close" />

</RelativeLayout>

